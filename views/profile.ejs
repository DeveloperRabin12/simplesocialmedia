               <h2 class="text-lg"><%= user.name %></h2>
               <p class="text-sm"><%= post.content %> </p>
               <div class="flex justify-between">
                   <a href="" class="text-blue-500">LikeğŸ‘</a>
                   <a href="">Comment</a>
                   <a href="">Edit</a>
                   <a class="bg-red-800 p-1 rounded-md text-sm" href="">delete</a>
               </div>
            </div>
            <% })%>
        </div>
    </div>
    
</body>
</html>
          
       
            
            
            
           